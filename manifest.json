{
  "manifest_version": 3,
  "version": "1.0",
  "name": "key-prompt",
  "description": "An extension that displays the keys being operated",
  "background": {
    "service_worker": "./background.ts"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./content/content.ts"
      ]
    }
  ],
  "action": {
    "default_popup": "./popup/popup.html"
  },
  "icons": {
    "16": "public/icon/icon_16.png",
    "48": "public/icon/icon_48.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}